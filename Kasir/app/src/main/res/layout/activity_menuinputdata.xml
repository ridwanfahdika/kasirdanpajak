<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuinput"
    tools:context=".menuinputdata">

    <Button
        android:id="@+id/btnback"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476">

        <Button
            android:id="@+id/btninputbarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Barang" />

        <Button
            android:id="@+id/btninputpengharian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Penghasilan Harian" />

        <Button
            android:id="@+id/btninputpengbulanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Penghasilan Bulanan" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>